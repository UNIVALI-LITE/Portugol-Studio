<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE RSyntaxTheme SYSTEM "theme.dtd">

<!--
	Dark theme based off of Notepad++'s Obsidian theme.
-->
<RSyntaxTheme version="1.0">

   <!-- Specify family="..." attribute to override system default monospaced. -->
   <baseFont size="12"/>
   
   <!--  General editor colors. -->
   <background color="263238"/>
   <caret color="c1cbc2"/>
   <selection bg="404E51" roundedEdges="false"/>
   <currentLineHighlight color="2F393C" fade="false"/>
   <marginLine fg="394448"/>
   <markAllHighlight color="6b8189"/> <!-- TODO: Fix me -->
   <markOccurrencesHighlight color="6b8189" border="false"/>
   <matchedBracket fg="6A8088" bg="6b8189" highlightBoth="false" animate="true"/>
   <hyperlinks fg="A082BD"/>
   <secondaryLanguages>
      <language index="1" bg="334455"/>
      <language index="2" bg="00F0C0"/>
      <language index="3" bg="ffe0f0"/>
   </secondaryLanguages>
   
   <!-- Gutter styling. -->
   <gutterBorder color="1E2324"/>
   <lineNumbers fg="516268"/>
   <foldIndicator fg="516268" iconBg="263238"/>
   <iconRowHeader activeLineRange="3399ff"/>
   
   <!-- Syntax tokens. -->
   <tokenStyles>
      <style token="IDENTIFIER" fg="FBFBFB"/>
      <style token="RESERVED_WORD" fg="F1433C" bold="true"/>
      <style token="RESERVED_WORD_2" fg="F1433C" bold="true"/>
      <style token="ANNOTATION" fg="E8E2B7"/>
      <style token="COMMENT_DOCUMENTATION" fg="6C788C"/>
      <style token="COMMENT_EOL" fg="66747B"/>
      <style token="COMMENT_MULTILINE" fg="66747B"/>
      <style token="COMMENT_KEYWORD" fg="ae9fbf"/>
      <style token="COMMENT_MARKUP" fg="ae9fbf"/>
      <style token="FUNCTION" fg="FBFBFB"/>
      <style token="DATA_TYPE" fg="45BEFF" bold="true"/><!-- 00F0C0-->
      <style token="LITERAL_BOOLEAN" fg="F1433C" bold="true"/>
      <style token="LITERAL_NUMBER_DECIMAL_INT" fg="00F0C0"/>
      <style token="LITERAL_NUMBER_FLOAT" fg="00F0C0"/>
      <style token="LITERAL_NUMBER_HEXADECIMAL" fg="00F0C0"/>
      <style token="LITERAL_STRING_DOUBLE_QUOTE" fg="FFC200"/>
      <style token="LITERAL_CHAR" fg="FFC200"/>
      <style token="LITERAL_BACKQUOTE" fg="F19494"/>
      <style token="MARKUP_TAG_DELIMITER" fg="00F0C0"/>
      <style token="MARKUP_TAG_NAME" fg="ABBFD3"/>
      <style token="MARKUP_TAG_ATTRIBUTE" fg="B3B689"/>
      <style token="MARKUP_TAG_ATTRIBUTE_VALUE" fg="e1e2cf"/>
      <style token="MARKUP_PROCESSING_INSTRUCTION" fg="A082BD"/>
      <style token="MARKUP_CDATA" fg="ae9fbf"/>
      <style token="OPERATOR" fg="E8E2B7"/>
      <style token="PREPROCESSOR" fg="A082BD"/>
      <style token="REGEX" fg="d39745"/>
      <style token="SEPARATOR" fg="E8E2B7"/>
      <style token="VARIABLE" fg="ae9fbf" bold="true"/>
      <style token="WHITESPACE" fg="FBFBFB"/>
      
      <style token="ERROR_IDENTIFIER" fg="FBFBFB" bg="04790e"/>
      <style token="ERROR_NUMBER_FORMAT" fg="FBFBFB" bg="04790e"/>
      <style token="ERROR_STRING_DOUBLE" fg="FBFBFB" bg="04790e"/>
      <style token="ERROR_CHAR" fg="FBFBFB" bg="04790e"/>
   </tokenStyles>

</RSyntaxTheme>
